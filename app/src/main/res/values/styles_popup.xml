<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- popupwindow 底部滑出动画 -->
    <style name="popwindow_anim_style_downshow">
        <item name="android:windowEnterAnimation">@anim/popup_down_show</item><!-- 指定显示时的动画xml -->
        <item name="android:windowExitAnimation">@anim/popup_down_dismiss</item><!-- 指定消失时的动画xml -->
    </style>
    <!-- popupwindow 渐变显示动画 -->
    <style name="popwindow_anim_style_alphashow">
        <item name="android:windowEnterAnimation">@anim/popup_alpha_show</item><!-- 指定显示时的动画xml -->
        <item name="android:windowExitAnimation">@anim/popup_alpha_dismiss</item><!-- 指定消失时的动画xml -->
    </style>
</resources>